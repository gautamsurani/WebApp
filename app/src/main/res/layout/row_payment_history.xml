<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_weight="3"  android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginTop="1dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <tech.fraction.webapp.ui.MyTextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/calender"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:text="@string/row_date"
        android:textSize="16sp" />

    <tech.fraction.webapp.ui.MyTextView

        android:id="@+id/tvPaidAmount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:text="@string/row_unloading_charge"

        android:textColor="@color/light_black"
        android:textSize="16sp" />

    <ImageView

        android:id="@+id/imgDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="end|center_vertical"
        android:padding="5dp"
        android:src="@drawable/delete_icon"

        android:tint="@color/light_black" />
    <ProgressBar

        android:id="@+id/pbPayHisory"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="end|center_vertical"
        android:padding="5dp"
        android:src="@drawable/delete_icon"

        android:visibility="gone"
        android:tint="@color/light_black" />


</LinearLayout>