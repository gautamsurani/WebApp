<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_layout_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_logo"
                android:layout_marginTop="25dp"
                android:textColorHint="@color/hint_color">

                <tech.fraction.webapp.ui.MyEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/view_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_input_layout_one"
                android:layout_marginTop="3dp"
                android:background="#3172a5" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_input_layout_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_one"
                android:layout_marginTop="10dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent"
                android:textColorHint="@color/hint_color">

                <tech.fraction.webapp.ui.MyEditText
                    android:id="@+id/edt_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:drawableStart="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/view_two"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt_input_layout_two"
                android:layout_marginTop="3dp"
                android:background="#3172a5" />

            <TextView
                android:id="@+id/txt_forgot_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_two"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Forgot Password"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/txt_forgot_pwd"
                android:layout_marginTop="20dp"
                android:background="@drawable/mybutton"
                android:gravity="center"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>