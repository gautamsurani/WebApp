<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <tech.fraction.webapp.ui.MyBoldTextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/row_name_item"
            android:textColor="@color/light_black" />

        <tech.fraction.webapp.ui.MyTextView
            android:id="@+id/detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_detail_value"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ll_one"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <tech.fraction.webapp.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_location_name" />

        <tech.fraction.webapp.ui.MyBoldTextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_location"
            android:textColor="@color/light_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_two"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <tech.fraction.webapp.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_unloading" />

        <tech.fraction.webapp.ui.MyBoldTextView
            android:id="@+id/txt_unloading_charges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_unloading_charge"
            android:textColor="@color/light_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_three"
        android:layout_marginTop="15dp"
        android:background="#33C7C1C1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:src="@drawable/edit"
           />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#D6D5D5" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:src="@drawable/delete"
         />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#D6D5D5" />
    </LinearLayout>
</RelativeLayout>