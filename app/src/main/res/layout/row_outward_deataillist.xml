<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="2dp"
    android:padding="10dp"
    android:id="@+id/rl_detail">
<LinearLayout
    android:id="@+id/ll_one"

    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <tech.fraction.webapp.ui.MyBoldTextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Dhani Akhi[Locale Bardhan]"/>
    <tech.fraction.webapp.ui.MyTextView
        android:id="@+id/detail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="100/200"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:layout_below="@id/ll_one">
        <tech.fraction.webapp.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location :"/>
        <tech.fraction.webapp.ui.MyBoldTextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A304,A304,A304"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:layout_below="@+id/ll_two">
        <tech.fraction.webapp.ui.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unloading Charges :"/>
        <tech.fraction.webapp.ui.MyBoldTextView
            android:id="@+id/txt_unloading_charges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500"/>
    </LinearLayout>
</RelativeLayout>